ENCRYPTION_KEY=
API_RATE_LIMIT=100
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Demo Configuration
DEMO_EFFECTS_ENABLED=0

# API Configuration
API_BASE_URL=http://localhost:8000

