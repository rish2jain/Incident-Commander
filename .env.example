# Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=true

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
# For LocalStack development
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ROLE_SESSION_DURATION=3600

# Bedrock Configuration
BEDROCK_PRIMARY_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_FALLBACK_MODEL=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.1

# Database Configuration
DYNAMODB_TABLE_PREFIX=incident-commander
KINESIS_STREAM_NAME=incident-events
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.us-east-1.es.amazonaws.com

# External Service API Keys (Production only)
DATADOG_API_KEY=your_datadog_api_key_here
PAGERDUTY_API_KEY=your_pagerduty_api_key_here
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# Redis Configuration (for local development)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/incident-commander.log

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Performance Configuration
MAX_CONCURRENT_INCIDENTS=100
AGENT_TIMEOUT_SECONDS=300
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=30

# Demo Configuration
DEMO_MODE=false
DEMO_SCENARIO_TIMEOUT_MINUTES=5
DEMO_EFFECTS_ENABLED=0
